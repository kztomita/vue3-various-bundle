{
  "compilerOptions": {
    "lib": ["es2015", "dom"],     // DOMを使う
    "module": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
}
